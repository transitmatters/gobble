{
  "Resources": {
    "PerformanceBucketPolicy": {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": ["s3:GetObject", "s3:PutObject"],
              "Resource": [
                "arn:aws:s3:::tm-mbta-performance",
                "arn:aws:s3:::tm-mbta-performance/*",
              ],
            },
            {
              "Effect": "Allow",
              "Action": "s3:ListBucket",
              "Resource": [
                "arn:aws:s3:::tm-mbta-performance",
                "arn:aws:s3:::tm-mbta-performance/*",
              ],
            }
          ]
        },
        "Roles": [
          {
            "Ref" : "S3BucketsRole"
          }
        ]
      },
    },
    "S3BucketsRole" : {
      "Type" : "AWS::IAM::Role",
      "Properties" : {
        "AssumeRolePolicyDocument": {
          "Version" : "2012-10-17",
          "Statement" : [
            {
              "Effect" : "Allow",
              "Principal" : {
                "Service" : ["ec2.amazonaws.com"]
              },
              "Action" : [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path" : "/"
      }
    },
    "S3BucketsInstanceProfile" : {
      "Type" : "AWS::IAM::InstanceProfile",
      "Properties" : {
        "Path" : "/",
        "Roles" : [
          {
            "Ref" : "S3BucketsRole"
          }
        ]
      }
    },
    "GBLEInstance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-0feba2720136a0493",
        "InstanceType": "t4g.small",
        "KeyName": "transitmatters-gobble",
        "IamInstanceProfile" : {
          "Ref" : "S3BucketsInstanceProfile"
        },
        "PropagateTagsToVolumeOnCreation": true,
        "SecurityGroupIds": [
          {
            "Ref": "GBLESecurityGroup"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": "gobble"
          },
          {
            "Key": "service",
            "Value": "gobble"
          }
        ],
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": 32,
              "VolumeType": "gp3"
            }
          }
        ]
      }
    },
    "GBLESecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": {
          "Fn::Sub": "GBLE-securitygroup"
        },
        "GroupDescription": "Allow SSH inbound and outbound traffic",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 22,
            "ToPort": 22,
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    }
  }
}